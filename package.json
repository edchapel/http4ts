{
  "name": "http4ts",
  "version": "0.0.2",
  "description": "Server as a Function http toolkit for Typescript",
  "main": "dist/src/node/index.js",
  "types": "dist/src/node/index.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts src/**",
    "lint-fix": "eslint --ext .ts --fix src/**",
    "example": "nodemon",
    "example-client": "ts-node --project tsconfig.json ./src/examples/simple-node-client.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "test": "jest",
    "tdd": "jest --watchAll",
    "test-ci": "jest --ci --coverage",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/http4ts/http4ts.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/http4ts/http4ts/issues"
  },
  "homepage": "https://github.com/http4ts/http4ts#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.29",
    "@types/request-promise": "^4.1.45",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "request-promise": "^4.2.5",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "./src",
    "coverageDirectory": "../coverage",
    "setupFiles": [
      "<rootDir>../jest/setup.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/no-parameter-properties": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-inferrable-types": 0
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier ----write"
    ]
  }
}
